<UserControl x:Class="Main.UserControls.ScalarPropertyTypeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock>Escalar</TextBlock>
        <Slider 
            Interval="{Binding ScalarValue.TypeOfValue.Step}" 
            Maximum="{Binding ScalarValue.TypeOfValue.MaxValue}" 
            Minimum="{Binding ScalarValue.TypeOfValue.MinValue}" 
            Value="{Binding Value}"
            />
        <TextBlock Text="{Binding Value}" />
    </StackPanel>
</UserControl>
